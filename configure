#!/bin/sh

echo "---------------------------------"
echo "         PREPARANDO BBB"

echo "Instalando o Maven..."
sudo apt-get install maven2
echo "Maven ==> ok "

echo "Baixando o Apache Tomcat 6..."
wget http://ftp.unicamp.br/pub/apache/tomcat/tomcat-6/v6.0.37/bin/apache-tomcat-6.0.37.tar.gz
tar xvzf apache-tomcat-6.0.37.tar.gz
mv apache-tomcat-6.0.37 tomcat6
echo "Tomcat 6 ==> ok."

echo "          PRONTO"
echo "---------------------------------"
